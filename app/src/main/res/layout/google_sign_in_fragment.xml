<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/colorPrimary"
	>


    <Button
	    android:id="@+id/search"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="search"
	    android:visibility="gone"
	    app:layout_constraintEnd_toEndOf="parent"
	    app:layout_constraintStart_toStartOf="parent"
	    app:layout_constraintTop_toBottomOf="@+id/sign_google"
	    />

    <Button
	    android:id="@+id/create_folder"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="create folder"
	    android:visibility="gone"
	    app:layout_constraintEnd_toEndOf="parent"
	    app:layout_constraintStart_toStartOf="parent"
	    app:layout_constraintTop_toBottomOf="@+id/search"
	    />

    <Button
	    android:id="@+id/upload_file"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="upload file"
	    android:visibility="gone"
	    app:layout_constraintEnd_toEndOf="parent"
	    app:layout_constraintStart_toStartOf="parent"
	    app:layout_constraintTop_toBottomOf="@+id/create_folder"
	    />
	
	
	
	<Button
		android:id="@+id/sign_google"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="50dp"
		android:backgroundTint="@color/colorAccent"
		android:text="Sign in"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/iv_google"
		/>
	
	<TextView
		android:id="@+id/sign_tv"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="50dp"
		android:backgroundTint="@color/colorAccent"
		android:text="Sign in"
		android:textSize="25sp"
		android:visibility="gone"
		app:layout_constraintEnd_toEndOf="parent"
		android:textColor="@color/white"
		android:textStyle="italic"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/iv_google"
		/>
	
	<ImageView
		android:id="@+id/iv_google"
		android:layout_width="300dp"
		android:layout_height="300dp"
		android:scaleType="centerCrop"
		android:src="@drawable/ic_google"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		/>
	
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="50dp"
		android:gravity="center"
		android:text="Backup and restore you records!"
		android:textColor="@color/white"
		android:textSize="30sp"
		android:textStyle="bold"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		/>

</androidx.constraintlayout.widget.ConstraintLayout>